@model Order
<h2>Place Order</h2>
<div class="mx-auto rounded border p-4">
    <form method="post" asp-controller="Order" asp-action="Create">
         <input type="hidden" name="OrderID" value="@Model?.OrderID" />
        <div class="row mb-3">
            <label for="userId" class="col-sm-2 col-form-label col-form-label-lg">User ID:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="userId" name="userId" min="1"/>
            </div>
        </div>
        <div class="row mb-3">
            <label for="productId" class="col-sm-2 col-form-label col-form-label-lg">Product:</label>
            <div class="col-sm-10">
                <select class="form-select form-select-lg mb-3" name="productId" required>
                    <option selected disabled>-- Select a Product --</option>
                    @foreach (SelectListItem product in ViewBag.Products)
                    {
                        <option value="@product.Value">@product.Text</option>
                    }
                </select>            
            </div>
        </div>
        <div class="row mb-3">
            <label for="quantity" class="col-sm-2 col-form-label col-form-label-lg">Quantity:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="quantity" name="quantity" min="1"/>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-sm-4 d-grid">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
            <div class="col-sm-4 d-grid">
                <a class="btn btn-outline-dark" asp-controller="Order" asp-action="Index" role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>